<h2>Product Model</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>brand_id</th>
      <th>category_id</th>
      <th>price</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= product[:id] %>
      </td>
      <td>
        <%= product[:name] %>
      </td>
      <td>
        <%= product[:brand_id] %>
      </td>
      <td>
        <%= product[:category_id] %>
      </td>
      <td>
        <%= product[:price] %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
