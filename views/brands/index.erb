<h2>Brand Model</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
    <tr>
      <td>
        <%= brand[:id] %>
      </td>
      <td>
        <%= brand[:name] %>
      </td>

      <td>
        <!-- show flow -->
        <a href="/brands/<%= brand[:id] %>">View</a>
        <a href="/brands/<%= brand[:id] %>>/edit">Edit</a>

        <form action ="/brands/<%= brand[:id] %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete">

        </form>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>
