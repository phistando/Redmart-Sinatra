<h2>Purchase Model</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>product_id</th>
      <th>user_id</th>
      <th>purchase_date</th>
      <th>status</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    <% @purchases.each do |purchase| %>
    <tr>
      <td>
        <%= purchase[:id] %>
      </td>
      <td>
        <%= purchase[:product_id] %>
      </td>
      <td>
        <%= purchase[:user_id] %>
      </td>
      <td>
        <%= purchase[:purchase_date] %>
      </td>
      <td>
        <%= purchase[:status] %>
      </td>

      <td>
        <!-- show flow -->
        <a href="/purchases/<%= purchase[:id] %>">View</a>
        <a href="/purchases/<%= purchase[:id] %>>/edit">Edit</a>

        <form action ="/purchases/<%= purchase[:id] %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete">

        </form>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>
