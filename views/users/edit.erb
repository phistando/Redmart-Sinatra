<h3>Form to edit existing user / Edit Profile</h3>
<h3>USER ID: <%= @user[:id] %></h3>

<form action="/users/<%= @user[:id] %>" method="post">
  <input type="hidden" name="_method" value="put">

  <div class="form-group">
    <div>
    <label>Name</label>
  </div>
      <input type="text" name="user[name]" value="<%= @user[:name] %>">
  </div>

  <div class="form-group">
    <div>
    <label>Email</label>
  </div>
      <input type="text" name="user[email]" value="<%= @user[:email] %>">
  </div>

  <div class="form-group">
    <div>
    <label>Address</label>
  </div>
      <input type="text" name="user[address]" value="<%= @user[:address] %>">
  </div>

  <div class="form-group">
    <div>
    <label>Password</label>
  </div>
      <input type="text" name="user[password]" value="<%= @user[:password] %>">
  </div>

  <div class="form-group">
    <div>
    <label>Credit Card Number</label>
  </div>
      <input type="text" name="user[cc_number]" value="<%= @user[:cc_number] %>">
  </div>

  <div class="form-group">
    <div>
    <label>Date joined</label>
  </div>
      <input type="text" name="user[date_joined]" value="<%= @user[:date_joined] %>">  
  </div>

  <input type="submit" value="submit">
</form>
