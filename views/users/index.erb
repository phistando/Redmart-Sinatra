<h2>User Model</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>email</th>
      <th>address</th>
      <!-- <th>password</th>
      <th>cc_number</th> -->
      <th>date_joined</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= user[:id] %>
      </td>
      <td>
        <%= user[:name] %>
      </td>
      <td>
        <%= user[:email] %>
      </td>
      <td>
        <%= user[:address] %>
      </td>
      <!-- <td>
        <%= user[:password] %>
      </td>
      <td>
        <%= user[:cc_number] %>
      </td> -->
      <td>
        <%= user[:date_joined] %>
      </td>
      <td>
        <!-- show flow -->
        <a href="/users/<%= user[:id] %>">View</a>
        <a href="/users/<%= user[:id] %>>/edit">Edit</a>

        <form action ="/users/<%= user[:id] %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete">

        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
